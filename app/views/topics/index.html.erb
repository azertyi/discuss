<h1>Disscussions</h1>
<table class="table">
	<thead>
    <tr>
      <th>Topic</th>
      <th>Category</th>
      <th>View</th>
      <th>Replays</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
    <tr>
      <td><%= link_to topic.title, topic %></td>
      <td><%= Category.find(topic.category_id).title %></td>
      <td>6</td>
      <td>45</td>
      <td><%= topic.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
