<h1>Dashboard</h1>
<table class="table">
	<thead>
	 <tr>
      
		  <th>Topic</th>
		  <th>Category</th>
		  <th>View</th>
		  <th>Replays</th>
		  <th>Date</th>

      
    </tr>
	</thead>
  <tbody>
  <% @topics.each do |topic| %>
    <tr>
      <td><%= link_to topic.title, topic %></td>
      <td><%= Category.find(topic.category_id).title %></td>
      <td>6</td>
      <td>45</td>
      <td><%= topic.created_at %></td>
      <td>
        <% if signed_in? %>
          <%= link_to 'Delete', topic_path(topic), method: :delete, data: {confirm: 'Are you sure?'}, class:'btn btn-danger' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>